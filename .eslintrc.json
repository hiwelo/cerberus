{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "overrides": [{
    "files": ["**/*.tsx", "**/*.ts"],
    "rules": {
      "react/prop-types": "off"
    }
  }],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
